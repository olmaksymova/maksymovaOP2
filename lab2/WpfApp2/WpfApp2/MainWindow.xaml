        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="405" Background="LightSkyBlue">
    <Grid>
        <ComboBox x:Name="MyComboBox" HorizontalAlignment="Left" Height="31" Margin="186,54,0,0" VerticalAlignment="Top" Width="176" FontSize="18" FontStyle="Normal" FontFamily="Comic Sans MS">
