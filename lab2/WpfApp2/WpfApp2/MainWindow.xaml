        <Button Content="ОК" Background="LightGreen" HorizontalAlignment="Left" Height="28" Margin="42,105,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold"/>
        <Label Content="Оберіть додаток: " Margin="14,47,202,57"  FontFamily="Comic Sans MS" FontSize="18" FontWeight="Bold"/>
        <Label Content="Головне меню" Margin="110,3,113,103"  FontFamily="Comic Sans MS" FontWeight="Bold" FontSize="22" RenderTransformOrigin="0.5,0.5"/>
